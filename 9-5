#include <stdio.h>
#include <stdlib.h>
#include <string.h>

struct Node {
    char name[50];
    int time;
    struct Node* prev;
    struct Node* next;
};

struct Node* createNode(char* name, int time) {
    struct Node* newNode = (struct Node*)malloc(sizeof(struct Node));
    strcpy(newNode->name, name);
    newNode->time = time;
    newNode->next = newNode->prev = NULL;
    return newNode;
}

void insertUser(struct Node* head, char* name, int time) {
    struct Node* newNode = createNode(name, time);
    struct Node* temp = head->prev;
    newNode->next = head;
    newNode->prev = temp;
    temp->next = newNode;
    head->prev = newNode;
}

void displayQueue(struct Node* head) {
    struct Node* temp = head->next;
    if (temp == head) {
        printf("No users in the queue.\n");
        return;
    }
    while (temp != head) {
        printf("User: %s, Time: %d mins\n", temp->name, temp->time);
        temp = temp->next;
    }
    printf("\n");
}

void processQueue(struct Node* head) {
    if (head->next == head) {
        printf("No users to process.\n");
        return;
    }
    struct Node* current = head->next;
    printf("Washing machine assigned to %s for %d mins.\n", current->name, current->time);
    head->next = current->next;
    head->next->prev = head;
    free(current);
}

int main() {
    struct Node* head = createNode("", 0);
    head->next = head->prev = head;

    int choice, time;
    char name[50];

    while (1) {
        printf("1. Book Washing Machine\n2. Process Queue\n3. Display Queue\n4. Exit\nEnter your choice: ");
        scanf("%d", &choice);

        switch (choice) {
            case 1:
                printf("Enter user name: ");
                scanf("%s", name);
                printf("Enter time in minutes: ");
                scanf("%d", &time);
                insertUser(head, name, time);
                break;
            case 2:
                processQueue(head);
                break;
            case 3:
                displayQueue(head);
                break;
            case 4:
                exit(0);
            default:
                printf("Invalid choice.\n");
        }
    }

    return 0;
}
